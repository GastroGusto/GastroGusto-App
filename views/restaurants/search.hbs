<div class="container text-center">
  <div class="row">
		{{#each this}}
			<div class="product col-12 col-md-4 mb-4">
      <div class="card h-100">
					<h4 class='card-title'>{{Name}}</h4>
					<h5 class='card-title'>{{Award}}</h5>
					<h6 class='card-subtitle mb-2 text-body-secondary'>Cusine:
						{{Cuisine}}</h6>
					<p class='card-text'>Price: {{Location}}</p>
					<p class='card-text'>Location: {{Location}}</p>
					<a href='/restaurants/{{_id}}' class='card-link'>More Details</a>
					<a href='{{WebsiteUrl}}' class='card-link'>Official Website</a>
				</div>
			</div>
		{{/each}}
	</div>
</div>

<div class="container text-center">
  <div class="row">
    {{#each Review}}
    <div class="product col-12 col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-header h-100">
          <h4>{{title}}</h4>
          <div class="card-body h-100">
            <h5 class="card-title text-center">Reviewed by: {{username.username}}</h5>
            <p class="card-text text-center">{{comment}}</p>
            <p class="card-text text-center">Rating: {{rating}}</p>
            <a href="/restaurants/reviews/{{_id}}" type="button text center" class="btn btn-dark"
              style="background-color: #0a4275;">Edit Review</a>
            <form action="/restaurants/reviews/{{_id}}/delete" method="POST">
              <button class="btn btn-dark" style="background-color: #0a4275;">Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>